<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/sign_back"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="签到"
            android:textColor="#fff"
            android:textSize="20dp"
            android:padding="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:text="积分200分"
            android:textColor="#fff"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/sign_btn_back"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/sign_btn_back1"
            android:layout_centerInParent="true"
            android:divider="@drawable/divider"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_personsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="签到"
                android:textSize="19dp"
                android:textColor="#c2ad36"/>

            <TextView
                android:id="@+id/tv_signdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_personsign"
                android:text="连续0天"
                android:textColor="#c2ad36"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="2020年2月3日"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/sign_textview_background"
            android:text="签到规则"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            />
        <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_textview_background1"
        android:text="1.连续7天获得优惠券1张"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:padding="10dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_textview_background1"
            android:text="2.连续14天获得优惠券2张"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_textview_background1"
            android:text="3.连续30天获得商城礼品1份"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:padding="10dp"/>


    </LinearLayout>

</LinearLayout>